{
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "@/*":["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": [
      "vitest/globals"
    ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
